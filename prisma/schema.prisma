datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Category {
  TECH
  LIFE
}

model Tag {
  id        String    @id() @default(cuid())
  name      String    @unique()
  slug      String    @unique()
  createdAt DateTime  @default(now())
  posts     PostTag[]

  @@map("tags")
}

model Post {
  id        String    @id() @default(cuid())
  slug      String    @unique()
  title     String
  content   String
  excerpt   String
  category  Category  @default(TECH)
  tags      String[]
  published Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  comments  Comment[]
  postTags  PostTag[]

  @@map("posts")
}

model PostTag {
  id     String @id() @default(cuid())
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId  String

  @@unique([postId, tagId])
  @@map("post_tags")
}

model Comment {
  id        String   @id() @default(cuid())
  content   String
  author    String
  email     String?
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String

  @@map("comments")
}
